<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.0">
	<class name="Business.Data.Perfil,Business" table="Sys_Perfil">

		<id name="IdPerfil" column="idPerfil" type="Int32" unsaved-value="0">
			<generator class="native"/>
		</id>

    <property column="idEfector" type="Int32" name="IdEfector" not-null="true" />
		<property column="nombre" type="String" name="Nombre" not-null="true" length="50" />
		<property column="activo" type="Boolean" name="Activo" not-null="true" />

    <property column="idUsuario" type="Int32" name="IdUsuario" not-null="true" />
    
		<property column="fechaActualizacion" type="DateTime" name="FechaActualizacion" not-null="true" />
		
	</class>
</hibernate-mapping>
